#include<iostream.h>
#include<conio.h>
void main()
{
clrscr();
void swap(int*x,int*y);
int x,y;
cout<<"Enter the value for x and y"<<endl; 
cin>>x>>y;
cout<<"Numbers before swapping"<<endl; 
cout<<"x="<<x<<"y="<<y<<endl; 
swap(&x,&y);
cout<<"Numbers after swapping"<<endl; 
cout<<"x="<<x<<"y="<<y<<endl;
getch();
}
void swap(int*x,int*y)
{
int temp;
temp=*x;
*x=*y;
*y=temp;
}
